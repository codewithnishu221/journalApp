<configuration>
<appender name="myConsoleAppender" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
        <pattern>
            %d{hh:mm:ss.SSS} {%thread} %-8level %logger{36} - %msg%n
        </pattern>
    </encoder>
</appender>

<!--    <appender name="myFileAppender" class="ch.qos.logback.core.FileAppender">--> //used for single log file and rolling fileappender is used for making a rotating file as per our needs for each run.
    <appender name="myFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>
            journalApp.log
        </file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
        <fileNamePattern>journalApp-%d{yy-MM-dd_HH-mm}.%i.log</fileNamePattern>
    <maxFileSize>10MB</maxFileSize>
    <maxHistory>10</maxHistory>
</rollingPolicy>
        <encoder>
            <pattern>
                %d{hh.mm.ss.SSS} {%thread} %-5level %logger{36} -%msg%n
            </pattern>
        </encoder>
    </appender>
    <root level="INFO">
        <appender-ref ref="myConsoleAppender" />
        <appender-ref ref="myFileAppender" />
    </root>
</configuration>